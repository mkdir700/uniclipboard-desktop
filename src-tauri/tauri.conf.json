{
  "$schema": "https://schema.tauri.app/config",
  "productName": "UniClipboard",
  "version": "0.1.0",
  "identifier": "com.uniclipboard.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "UniClipboard",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "devtools": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "state": "active",
          "radius": 16
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
